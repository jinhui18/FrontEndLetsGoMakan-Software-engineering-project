<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="402dp"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <ImageView
                android:id="@+id/imageView_bg1"
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:background="@drawable/box_display_restaurant_list" />


            <ImageView
                android:id="@+id/imageView_restaurant1"
                android:layout_width="67dp"
                android:layout_height="62dp"
                android:layout_alignStart="@+id/imageView_bg1"
                android:layout_alignTop="@+id/imageView_bg1"
                android:layout_marginStart="19dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/mail_plane" />

            <TextView
                android:id="@+id/textView_restaurant_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView_bg1"
                android:layout_marginStart="12dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/imageView_restaurant1"
                android:text="RestaurantName1" />

            <TextView
                android:id="@+id/textView_restaurant_address1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView_bg1"
                android:layout_marginStart="12dp"
                android:layout_marginTop="36dp"
                android:layout_toEndOf="@+id/imageView_restaurant1"
                android:text="76 Nanyang Drive, Food Court Level 2 S637331" />

            <TextView
                android:id="@+id/textView_restaurant_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView_bg1"
                android:layout_alignEnd="@+id/imageView_bg1"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="10dp"
                android:text="5 mins away" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>