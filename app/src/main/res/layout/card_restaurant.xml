<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/cardView"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp">


            <ImageView
                android:id="@+id/imageView_bg1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/box_display_restaurant_list" />


            <ImageView
                android:id="@+id/imageView_restaurant1"
                android:layout_width="67dp"
                android:layout_height="62dp"
                android:layout_alignStart="@+id/textView_restaurant_name1"
                android:layout_alignTop="@+id/imageView_bg1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/grey_bg" />

            <TextView
                android:id="@+id/textView_restaurant_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView_bg1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:text="RestaurantName1" />

            <TextView
                android:id="@+id/textView_restaurant_address1"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView_restaurant1"
                android:layout_marginStart="11dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/imageView_restaurant1"
                android:text="76 Nanyang Drive, Food Court Level 2 S637331"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_restaurant_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView_crowd_level"
                android:layout_alignEnd="@+id/imageView_bg1"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/montserrat"
                android:text="5 mins away"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView_restaurant_time1"
                android:layout_alignTop="@+id/textView_price_level"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-1dp"
                android:layout_marginEnd="22dp"
                android:fontFamily="@font/montserrat"
                android:text="Ratings"
                android:textColor="@color/black" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_rating"
                android:layout_alignStart="@+id/textView_rating"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:numStars="5"
                android:rating="3" />

            <TextView
                android:id="@+id/textView_crowd_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:layout_below="@+id/textView_restaurant_address1"
                android:layout_alignStart="@+id/textView_restaurant_address1"
                android:layout_marginStart="1dp"
                android:layout_marginTop="7dp"
                android:text="Crowd Level: " />

            <TextView
                android:id="@+id/textView_price_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_crowd_level"
                android:layout_alignStart="@+id/textView_crowd_level"
                android:layout_marginStart="1dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:text="Price:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_takeout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_price_level"
                android:layout_alignStart="@+id/textView_price_level"
                android:layout_marginStart="0dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/montserrat"
                android:text="Take out:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_open_closed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView_rating"
                android:layout_alignTop="@+id/textView_takeout"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/montserrat"
                android:text="Open/Closed: "
                android:textColor="@color/black" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>